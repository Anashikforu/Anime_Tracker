<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Anime Tracker</title>
		<link rel="stylesheet" href="http://localhost:8080/static/styles.css" />
	</head>
	<body>
		<header>
			<h1>My Anime List</h1>
			<a href="/">View All Anime</a>
			<a href="/add-anime">Add New Anime &#x27A2;</a>
		</header>

<main>
	<div class="container">
		<% anime.forEach(data => { %>
		<ul class="anime">
			<li><img src="static/<%= data.image %>" alt="<%= data.name %>" class="anime-img" /></li>
			<li>
				<h1><%= data.name %></h1>
			</li>
			<li>
				<a href="/<%= data.id %>">View Anime &#x21DB;</a>
			</li>
		</ul>
		<% }) %>
	</div>
</main>

</body>
</html>